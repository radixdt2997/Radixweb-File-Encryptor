# Copy this file to .env and adjust values.
# Vite loads .env from the client folder; only VITE_* variables are available to the app.
# If .env is missing, defaults in src/config/env.ts are used.

# API Configuration
# Base URL for the backend API (no trailing slash; routes like /upload are appended)
VITE_API_BASE_URL=http://localhost:3000/api

# App Configuration
# Application name displayed in the UI
VITE_APP_NAME=Secure File App

# App version
VITE_APP_VERSION=1.0.0

# Feature Flags
# Enable/disable various features
VITE_FEATURE_LEGACY_MODE=true
VITE_FEATURE_RECIPIENT_MODE=true
VITE_FEATURE_SENDER_MODE=true

# Encryption Settings
# PBKDF2 iterations for key derivation (higher = more secure but slower)
VITE_PBKDF2_ITERATIONS=250000

# OTP Settings
# OTP length in digits (must be between 4-8)
VITE_OTP_LENGTH=6

# UI Settings
# Default expiry time in minutes (must be between 5-1440)
VITE_DEFAULT_EXPIRY_MINUTES=60
VITE_MIN_EXPIRY_MINUTES=5
VITE_MAX_EXPIRY_MINUTES=1440

# Toast/Alert Settings
# Default toast auto-close duration in milliseconds
VITE_TOAST_DURATION_DEFAULT=5000
VITE_TOAST_DURATION_ERROR=7000

# Email Validation
# Allowed email domain for recipient validation (plain domain, not regex)
VITE_ALLOWED_EMAIL_DOMAIN=radixweb.com

# Debug Mode
# Set to true to enable debug logging
VITE_DEBUG_MODE=false
