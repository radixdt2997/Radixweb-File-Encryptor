{
    "name": "secure-file-server",
    "version": "1.0.0",
    "description": "Backend server for secure file delivery with OTP-based key wrapping",
    "main": "src/app.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "start": "node dist/app.js",
        "dev": "nodemon",
        "test": "jest",
        "type-check": "tsc --noEmit",
        "verify-encryption": "tsx scripts/verify-encryption.ts",
        "migrate-encryption-at-rest": "tsx scripts/migrate-encryption-at-rest.ts"
    },
    "keywords": [
        "encryption",
        "file-sharing",
        "otp",
        "zero-knowledge"
    ],
    "author": "Radixweb",
    "license": "MIT",
    "dependencies": {
        "better-sqlite3": "^9.6.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "multer": "^2.0.2",
        "nodemailer": "^6.9.7",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.13",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.21",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.11.0",
        "@types/nodemailer": "^7.0.10",
        "@types/swagger-ui-express": "^4.1.8",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "tsx": "^4.21.0",
        "typescript": "~5.9.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}